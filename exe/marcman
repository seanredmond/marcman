#!/usr/bin/env ruby

require "marcman"

code = ARGV.first.upcase
unless code =~ /[0-9X]{3}/
  puts "I don't recognize \"%s\". Please enter a 3-digit MARC field code." %
       code
  exit 1
end

field = Marcman::MARC[code]

if field.nil?
  puts "No MARC field with the code %s" % code
  exit 0
end

puts "%s: %s" % [code, field]
